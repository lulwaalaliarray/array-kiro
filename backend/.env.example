# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/patientcare_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/
BASE_URL=http://localhost:3001

# External APIs
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_WEBHOOK_SECRET=your-zoom-webhook-secret

GOOGLE_MAPS_API_KEY=your-google-maps-api-key

STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Security
ENCRYPTION_KEY=your-256-bit-encryption-key-in-hex-format-64-characters-long
HASH_SALT=your-secure-hash-salt-for-data-hashing

# Performance & Monitoring
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=5000

# Backup Configuration
BACKUP_DIR=./backups